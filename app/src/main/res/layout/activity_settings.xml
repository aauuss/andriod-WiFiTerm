<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
                                             android:orientation="vertical"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent">

    <TextView
            android:text="Alarm HH"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView" android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginStart="16dp"
            app:layout_constraintLeft_toLeftOf="parent" android:layout_marginEnd="16dp"
            app:layout_constraintRight_toRightOf="parent" app:layout_constraintHorizontal_bias="0.33"
    />
    <TextView
            android:text="Alarm LL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView2"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginEnd="16dp" app:layout_constraintRight_toRightOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintLeft_toRightOf="@+id/textView"/>
    <TextView
            android:text="Temp TOP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView3" android:layout_marginStart="16dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView" android:layout_marginTop="16dp"
    />
    <EditText
            android:layout_width="83dp"
            android:inputType="numberDecimal"
            android:ems="10"
            android:id="@+id/etAlmHhTop"
            app:layout_constraintRight_toRightOf="@+id/textView"
            app:layout_constraintLeft_toLeftOf="@+id/textView"
            app:layout_constraintTop_toTopOf="@+id/textView3"
            app:layout_constraintBottom_toBottomOf="@+id/textView3" android:textSize="18sp"
            android:layout_height="45dp" android:gravity="center_vertical|center_horizontal" android:numeric="decimal"/>
    <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/checkHHTOP"
            app:layout_constraintBottom_toBottomOf="@+id/etAlmHhTop"
            app:layout_constraintTop_toTopOf="@+id/etAlmHhTop"
            app:layout_constraintLeft_toRightOf="@+id/etAlmHhTop"/>
    <EditText
            android:inputType="numberDecimal"
            android:ems="10"
            android:id="@+id/etAlmLlTop"
            android:layout_height="45dp"
            android:layout_width="83dp" android:numeric="decimal" android:gravity="center_vertical|center_horizontal"
            app:layout_constraintLeft_toLeftOf="@+id/textView2"
            app:layout_constraintRight_toRightOf="@+id/textView2"
            app:layout_constraintBottom_toBottomOf="@+id/textView3" app:layout_constraintTop_toTopOf="@+id/textView3"/>
    <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/checkLLTOP"
            app:layout_constraintLeft_toRightOf="@+id/etAlmLlTop"
            app:layout_constraintBottom_toBottomOf="@+id/etAlmLlTop"
            app:layout_constraintTop_toTopOf="@+id/etAlmLlTop" app:layout_constraintVertical_bias="0.52"/>
    <TextView
            android:text="Temp MID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView4" android:layout_marginStart="16dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="32dp" app:layout_constraintTop_toBottomOf="@+id/etAlmHhTop"
    />
    <EditText
            android:layout_width="83dp"
            android:layout_height="45dp"
            android:inputType="numberDecimal"
            android:ems="10"
            android:id="@+id/etAlmHhMid"
            app:layout_constraintRight_toRightOf="@+id/textView" app:layout_constraintLeft_toLeftOf="@+id/textView"
            app:layout_constraintTop_toTopOf="@+id/textView4" app:layout_constraintBottom_toBottomOf="@+id/textView4"
            android:gravity="center_vertical|center_horizontal"/>
    <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/checkHHMID"
            app:layout_constraintLeft_toRightOf="@+id/etAlmHhMid" app:layout_constraintTop_toTopOf="@+id/etAlmHhMid"
            app:layout_constraintBottom_toBottomOf="@+id/etAlmHhMid"/>
    <EditText
            android:layout_width="83dp"
            android:layout_height="45dp"
            android:inputType="numberDecimal"
            android:ems="10"
            android:id="@+id/etAlmLlMid"
            app:layout_constraintRight_toRightOf="@+id/textView2"
            app:layout_constraintLeft_toLeftOf="@+id/textView2" app:layout_constraintTop_toTopOf="@+id/textView4"
            app:layout_constraintBottom_toBottomOf="@+id/textView4"
            android:gravity="center_vertical|center_horizontal"/>
    <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/checkLLMID"
            app:layout_constraintLeft_toRightOf="@+id/etAlmLlMid" app:layout_constraintTop_toTopOf="@+id/etAlmLlMid"
            app:layout_constraintBottom_toBottomOf="@+id/etAlmLlMid"/>
    <TextView
            android:text="Temp BOT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/editText23"
            android:layout_marginStart="16dp"
            app:layout_constraintLeft_toLeftOf="parent" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/etAlmHhMid"/>
    <EditText
            android:layout_width="83dp"
            android:layout_height="45dp"
            android:inputType="numberDecimal"
            android:ems="10"
            android:id="@+id/etAlmHhBot"
            app:layout_constraintRight_toRightOf="@+id/textView"
            app:layout_constraintLeft_toLeftOf="@+id/textView" app:layout_constraintTop_toTopOf="@+id/editText23"
            app:layout_constraintBottom_toBottomOf="@+id/editText23"
            android:gravity="center_vertical|center_horizontal"/>
    <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/checkHHBOT"
            app:layout_constraintBottom_toBottomOf="@+id/etAlmHhBot"
            app:layout_constraintTop_toTopOf="@+id/etAlmHhBot"
            app:layout_constraintLeft_toRightOf="@+id/etAlmHhBot"/>
    <EditText
            android:layout_width="83dp"
            android:layout_height="45dp"
            android:inputType="numberDecimal"
            android:ems="10"
            android:id="@+id/etAlmLlBot"
            app:layout_constraintRight_toRightOf="@+id/textView2"
            app:layout_constraintLeft_toLeftOf="@+id/textView2" app:layout_constraintTop_toTopOf="@+id/editText23"
            app:layout_constraintBottom_toBottomOf="@+id/editText23"
            android:gravity="center_vertical|center_horizontal"/>
    <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/checkLLBOT"
            app:layout_constraintBottom_toBottomOf="@+id/etAlmLlBot"
            app:layout_constraintTop_toTopOf="@+id/etAlmLlBot" app:layout_constraintLeft_toRightOf="@+id/etAlmLlBot"/>
    <CheckBox
            android:text="Enable LS alarm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/checkLSenb" android:layout_marginStart="16dp" app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="40dp" app:layout_constraintTop_toBottomOf="@+id/editText23"
    />
    <Button
            android:text="Save and exit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonSaveAndExit"
            android:layout_marginEnd="16dp" app:layout_constraintRight_toRightOf="parent"
            android:layout_marginStart="16dp" app:layout_constraintLeft_toLeftOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/checkLSenb" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="16dp" android:onClick="onSaveClick" tools:onClick="onSaveClick"/>
</android.support.constraint.ConstraintLayout>